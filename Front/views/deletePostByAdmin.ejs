    <%- include('./includes/header.ejs') %>
<%console.log('----------recuperer dans home', locals.post.success) %>
  <main class="container">
    <div class="total">
      <div class="partie1">
        <% locals.post.success.map( ( user) => {  %>
          <% user.Posts.map( ( post) => {  %>
            <% if(post.userId === user.id) {  %>
          <div class="card-group">
            <div id="largeur" class="card" style="width: 18rem">
              <% if (post.attachement !="" ){ %>
                <img id="image" style=" border-radius: 10px; height: 200px;"
                  src="/img/<%= post.attachement %> " class="img-fluid H-50% W-50% Voir" alt="..."/>
                  <% } else { %>
                  <img id="image" style=" border-radius: 10px; height: 200px;"
                    src="https://dummyimage.com/640x360/fff/aaa" class="img-fluid H-50% W-50% Voir " alt="..."/>
                  <% } %>
                    <div class="card-body">
                      <h5 class="card-title">
                       <%= post.texte %>
                      </h5>
                    <form action="/deletePostByAdmin/<%= post.id %>" method="post">
                 
                        <button type="submit" class="btn btn-primary btn-sm" onClick= 'return confirm("Voulez-vous vraiment supprimer ce post ?")'>Supprimer le post complet</button>
                    </form>

                      <div class="mileu" role="alert">
                        <div class="ide">
                        <%= user.nom %> <%= user.prenom %>  
                        </div> 
                      </div>
                   
                      <hr>
                      <div class="ICO">
                        <form action="/like/post/<%= post.id %>" method="post" id="IDLIKE">
                          <button id="coeur"> <i class="fa fa-thumbs-up " style="font-size: 20px"></i></button>
                        </form>
                        <p>
                           <%= post.likesCount %>
                        </p>
                        <form action="/unlike/post/ <%= post.id %>" method="post" id="IDDISLIKE">
                          <button> <i class="fa fa-thumbs-down" style="font-size: 20px"></i></button>
                        </form>
                      </div>
                    </div>
            </div>
          </div>
          <%  }  %>
         <%  } ) %>
         <%  } ) %>

      </div>
    </div>

  </main>

  </body>

  </html>