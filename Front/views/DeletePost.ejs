<%- include('./includes/header.ejs') %>
  <main class="container">
    <div class="column">
      <h1>HELLO WOLRD</h1>
      <div class="column">
        <figure class="textHome text-end">
          <h3>Connectez-Vous</h3>
          <figcaption class="blockquote-footer">
            HELLO WORLD <cite title="Source Title">This is My Project</cite>
          </figcaption>
        </figure>
      </div>
      <br>
        <div class="album">
          <div id="form3">
            <% locals.post.success.reverse().map((post)=>{ %>
              <% if(post.userId===locals.me.id){ %>
                <div class="card-group">
                  <div id="largeur" class="card" style="width: 18rem">
                    <% if (post.attachement != ""){ %>
                       <img id="image" style=" border-radius: 10px; height: 200px;" src="/img/<%= post.attachement %>"  class="img-fluid H-50% W-50%" alt="...">
                    <% } else { %> 
                        <img id="image" style=" border-radius: 10px; height: 200px;" src="https://dummyimage.com/640x360/fff/aaa" class="img-fluid H-50% W-50%" alt="...">
                    <% } %> 
                    <div class="card-body">
                      <h5 class="card-title">
                        <%= post.texte %>
                      </h5>
                    </div>
                    <form action="/profil/DeletePost/<%= post.id %>" method="post">
                        <button type="submit"  class="btn btn-primary btn-sm butDelete" onClick= 'return confirm("Voulez-vous vraiment supprimer ce post ?")'>Supprimer le post complet</button>
                    </form>
                  </div>
                </div>
                <% } %>
                <% }) %>
          </div>
          <hr>
        </div>
      </div>
    </div>
      <br>
      <br>
    </div>
    </div>
  </main>
  </body>

  </html>